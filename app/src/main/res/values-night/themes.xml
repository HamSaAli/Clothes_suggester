<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Clothes_suggester" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextMoreInformation">
        <item name="android:textColor">@color/white_100</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextMoreInformation.label">
        <item name="android:textColor">@color/white_100</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:drawableTint">@color/white_100</item>
    </style>

    <style name="BackgroundColor">
        <item name="android:background">#071e26</item>
    </style>

    <style name="CardColor">
        <item name="android:background">#0b2d39</item>
    </style>

    <style name="TextTempatureColor">
        <item name="android:textColor">@color/white_100</item>
    </style>

    <style name="TextWeatherToday">
        <item name="android:textColor">@color/white_100</item>
    </style>

    <style name="TextCityName">
        <item name="android:textColor">@color/white_400</item>
        <item name="android:drawableTint">@color/white_300</item>
    </style>

</resources>